{% extends 'base.html.twig' %}

{% block title %}Liste des Classeurs Tux{% endblock %}

{% block main %}
        <div class="text-center">
        <a href="/classeur/#" class ="btn btn-info text-white mx-auto w-25 mt-4 mb-5"><h4>Nouveau Classeur</h4></a> 
        </div>
        {% for classeur in classeurs %}

        <div class="card shadow p-3 mb-5 bg-body-tertiary rounded bg-light mx-auto" style="width: 25rem;">

          <img src='https://images.emojiterra.com/google/noto-emoji/unicode-15/color/512px/1f4da.png' class="mx-auto p-2" alt="classeur" width="100" height="100">

          <div class="card-body mx-auto p-2">

            <h5 class="card-title text-center">{{ classeur.name }}</h5>
            <p class="card-text text-center">Classeur de {{ classeur.membreTux }}</p>

            <div class="container mx-auto p-2">
              <a href="{{ path('app_classeur_tux_show',{'id':classeur.id}) }}" class="btn btn-primary">Détails</a>
              <a href="{{ path('app_classeur_tux_edit',{'id':classeur.id}) }}" class="btn btn-danger">Éditer</a>  
            </div>            

          </div>

        </div>        
        {% endfor %}
      </div>

      </ul>
{% endblock %}
