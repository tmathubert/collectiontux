{% extends 'base.html.twig' %}

{% block title %}MembreTux{% endblock %}

{% block main %}
    <h1>MembreTux</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ membre_tux.id }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ membre_tux.role }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ membre_tux.pseudo }}</td>
            </tr>
            <tr>
                <th>Classeurs</th>
                {% for classeur in membre_tux.classeurstux %}
