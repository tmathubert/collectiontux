        </tbody>
    </table>
    <a href="{{ path('app_classeur_tux_new', {'id': membre_tux.id}) }}">add new ClasseurTux</a><br>
    <a href="{{ path('app_vitrine_tux_new', {'id': membre_tux.id}) }}">add new VitrineTux</a><br>
